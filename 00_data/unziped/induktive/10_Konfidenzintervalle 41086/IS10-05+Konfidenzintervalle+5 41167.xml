  <variableDeclarations id="63">
    <VariableDeclaration id="64">
      <name>f</name>
      <initializationCode id="65">
        <code>evaluateInR(&apos;round(runif(1, 0.09, 0.14), 2)&apos;)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="66">
      <name>d</name>
      <initializationCode id="67">
        <code>evaluateInR(&apos;round(runif(1, 0.01, 0.04), 2)&apos;)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="68">
      <name>v</name>
      <initializationCode id="69">
        <code>([var=f])*(1-([var=f]))</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="70">
      <name>sol1</name>
      <initializationCode id="71">
        <code>evaluateInR(&apos;round(([var=v]*qnorm(0.975)^2)/[var=d]^2, 0)&apos;)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="72">
      <name>ueber</name>
      <initializationCode id="73">
        <code>randomIntegerBetween(10,30)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="74">
      <name>n</name>
      <initializationCode id="75">
        <code>182+[var=ueber]</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="76">
      <name>sol2u</name>
      <initializationCode id="77">
        <code>evaluateInR(&apos;([var=ueber]*100-sum(dbinom(183:[var=n], [var=n], 1-[var=f])*cumsum(rep(500, [var=ueber]))))&apos;)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="78">
      <name>sol2</name>
      <initializationCode id="79">
        <code>evaluateInR(&apos;round([var=sol2u], 2)&apos;)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="80">
      <name>approxu</name>
      <initializationCode id="81">
        <code>evaluateInR(&apos;([var=ueber]*100-sum(dnorm(183:[var=n],mean = [var=n]*(1-[var=f]), sd=sqrt([var=n]*[var=v])) * cumsum(rep(500, [var=ueber]))))&apos;)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="82">
      <name>approx</name>
      <initializationCode id="83">
        <code>evaluateInR(&apos;round([var=approxu], 2)&apos;)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="84">
      <name>tol</name>
      <initializationCode id="85">
        <code>evaluateInR(&apos;abs(([var=approxu])-([var=sol2u]))&apos;)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
  </variableDeclarations>
