    <VariableDeclaration id="67">
      <name>j</name>
      <initializationCode id="68">
        <code>randomIntegerBetween(0,1)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="69">
      <name>Frage1</name>
      <initializationCode id="70">
        <code>getFromList([var=i],list(&quot;$F(x)= \begin{cases} 0 &amp; \mbox{ für }\quad x &lt; 1 \\ \frac{3}{10}x-0.2 &amp; \mbox{ für }\quad 1 \le x \le 10 \\ 1 &amp; \mbox{ für }\quad x &gt; 10  \end{cases}$&quot;,&quot;$F(x)= \begin{cases} 0.1 &amp; \mbox{ für }\quad x &lt; 0.5 \\ \frac{1}{5}x^3 &amp; \mbox{ für }\quad 0.5 \le x \le 10 \\ 1 &amp; \mbox{ für }\quad x &gt; 10  \end{cases}$&quot;,&quot;$F(x)= \begin{cases} 0 &amp; \mbox{ für }\quad x &lt; 0 \\ 1 &amp; \mbox{ für }\quad x \ge 0  \end{cases}$&quot;))</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="71">
      <name>Frage2</name>
      <initializationCode id="72">
        <code>getFromList([var=j],list(&quot;$f(x)= \begin{cases} \textrm{sin }x &amp; \mbox{ für }\quad -\pi \le x &lt; \frac{3}{2}\pi \\ 0 &amp; \mbox{ sonst. }\  \end{cases}$&quot;,&quot;$f(x)= \begin{cases} 2e^{-2x} &amp; \mbox{ für }\quad x \ge 0 \\ 0 &amp; \mbox{ sonst. }  \end{cases}$&quot;))</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="73">
      <name>Antwort1</name>
      <initializationCode id="74">
        <code>getFromList([var=i],list(&quot;Da z.B. $F(10)&gt;1$ ist dies keine Verteilungsfunktion&quot;,&quot;Da $\underset{x\rightarrow-\infty}{\lim} F(x)\neq 0$ ist dies keine Verteilungsfunktion&quot;,&quot;Dies ist eine Verteilungsfunktion&quot;))</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="75">
      <name>Antwortnum1</name>
      <initializationCode id="76">
        <code>getFromList([var=i], list(0,0,1))</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="77">
      <name>Antwort2</name>
      <initializationCode id="78">
        <code>getFromList([var=j],list(&quot;Da $f(x) = \sin x &lt; 0$ für $x=\frac{3}{2}\pi$ und $\int\limits_{-\pi}^{\frac{3}{2}\pi}f(x)dx=-1$ ist dies keine Dichtefunktion&quot;,&quot;Da $f(x) \geq 0$ und $\int\limits^{\infty}_{-\infty} f(x) \enspace dx = \int\limits^{\infty}_{0} 2e^{-2x} \enspace dx = (-e^{-2x}) \bigg|^{\infty}_{0} = 0-(-1) = 1$ ist dies eine Dichtefunktion&quot;))</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="79">
      <name>Antwortnum2</name>
      <initializationCode id="80">
        <code>getFromList([var=j], list(0,1))</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
  </variableDeclarations>
