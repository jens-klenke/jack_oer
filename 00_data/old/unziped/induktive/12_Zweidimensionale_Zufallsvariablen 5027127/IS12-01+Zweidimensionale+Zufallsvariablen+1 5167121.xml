    <VariableDeclaration id="35">
      <name>n_Kugeln</name>
      <initializationCode id="36">
        <code>randomIntegerBetween(1, 3) * 10</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="37">
      <name>n_leicht</name>
      <initializationCode id="38">
        <code>randomIntegerBetween(2, 8)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="39">
      <name>n_schwer</name>
      <initializationCode id="40">
        <code>[var=n_Kugeln] - ([var=n_leicht])</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="41">
      <name>nenner_2malZoZ</name>
      <initializationCode id="42">
        <code>[var=n_Kugeln] * ([var=n_Kugeln] - 1)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="43">
      <name>x1_y1</name>
      <initializationCode id="44">
        <code>round(
[var=n_leicht] * ([var=n_leicht] - 1) / [var=nenner_2malZoZ], 2
)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="45">
      <name>x1_y2</name>
      <initializationCode id="46">
        <code>round(
[var=n_leicht] * [var=n_schwer] / [var=nenner_2malZoZ], 2
)</code>
        <domain>MATH</domain>
      </initializationCode>
    </VariableDeclaration>
    <VariableDeclaration id="47">
      <name>x2_y2</name>
